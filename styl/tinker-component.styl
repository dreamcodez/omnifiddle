.tinker-component
  fieldset.pane
    height 250px
    min-width 300px
    width 44%
    float left
    margin-right 15px

    textarea, .preview
      width 98%
      height 98%

    .preview
      background white

  button.submit
    position relative
    left -3.5%
    display block
    margin 20px auto
    padding 15px 30px

  .tabs
    position relative
    min-height 200px
    clear both
    margin 25px 0

  .tab
    float left

    [type=radio]
      display none

    label
      background #eee
      padding 10px
      border 1px solid #ccc
      margin-left -1px
      position relative
      left 1px

    .content
      position absolute
      top 28px
      left 0
      background white
      right 0
      bottom 0
      padding 20px
      border 1px solid #ccc
      overflow hidden

    .content > *
      opacity 0
      -webkit-transform translateX(-100%)
      -moz-transform translateX(-100%)
      -ms-transform translateX(-100%)
      -o-transform translateX(-100%)
      -webkit-transition all 0.6s ease
      -moz-transition all 0.6s ease
      -ms-transition all 0.6s ease
      -o-transition all 0.6s ease

    input[type=radio]:checked ~ label
      background white
      border-bottom 1px solid white
      z-index 2

    input[type=radio]:checked ~ label ~ .content
      z-index 1

    input[type=radio]:checked ~ label ~ .content > *
      opacity 1
      -webkit-transform translateX(0)
      -moz-transform translateX(0)
      -ms-transform translateX(0)
      -o-transform translateX(0)
